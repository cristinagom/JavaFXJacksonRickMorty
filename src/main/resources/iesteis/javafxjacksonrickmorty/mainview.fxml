        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <children>

            <Label layoutX="43.0" layoutY="9.0" text="Character" />
            <TextField fx:id="name" layoutX="132.0" layoutY="5.0" />
            <Button fx:id="search" layoutX="387.0" layoutY="2.0" onAction="#setName" text="Search" />
            <Label layoutX="43.0" layoutY="46.0" text="Status" />
            <Label fx:id="statusResult" layoutX="132.0" layoutY="46.0" prefHeight="17.0" prefWidth="161.0" />
            <ImageView fx:id="characterImage" fitHeight="150.0" fitWidth="200.0" layoutX="132.0" layoutY="63.0" pickOnBounds="true" preserveRatio="true" />
        </children>
    </AnchorPane>
</VBox>
